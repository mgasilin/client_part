<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:background="@drawable/ic_light_theme_background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/entryGuidelineLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/entryGuidelineRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/entryGuidelineTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_dbrect"
        app:layout_constraintBottom_toBottomOf="@+id/barrierMainAct"
        app:layout_constraintEnd_toEndOf="@+id/entryGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/entryGuidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/entryGuidelineTop" />
    <TextView
        android:id="@+id/mainTvTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:textSize="30sp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/entryGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/entryGuidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/entryGuidelineTop"
        app:layout_constraintVertical_bias="0" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/mainTvTop"
        android:layout_margin="10dp"
        android:id="@+id/entry_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Логин:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@+id/login"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_light_theme_light_blue_rect_huge"
        android:gravity="center"
        android:hint="Логин"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        app:layout_constraintEnd_toEndOf="@+id/entryGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/entryGuidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/entry_tv1" />

    <TextView
        android:id="@+id/entry_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:text="Пароль:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_light_theme_light_blue_rect_huge"
        android:gravity="center"
        android:hint="Пароль"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        app:layout_constraintEnd_toEndOf="@+id/entryGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/entryGuidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/entry_tv2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:id="@+id/barrierMainAct"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_light_teme_light_blue_rect"
        android:text="Войти"
        app:layout_constraintEnd_toStartOf="@+id/registerButton"
        app:layout_constraintStart_toStartOf="@+id/entryGuidelineLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/barrierMainAct" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="регистрация"
        android:background="@drawable/ic_light_teme_light_blue_rect"
        app:layout_constraintBottom_toBottomOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="@+id/entryGuidelineRight"
        app:layout_constraintStart_toEndOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="@+id/login_button" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGlMAct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

</androidx.constraintlayout.widget.ConstraintLayout>