<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_light_theme_background"
    tools:context=".tempThings.ShowcaseInfo">

    <TextView
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/info_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_name" />

    <TextView
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/info_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_date" />

    <TextView
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_categories" />

    <TextView
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/info_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info_description" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/map_placeholder"
        app:layout_constraintTop_toBottomOf="@id/info_place"
        android:layout_margin="16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>